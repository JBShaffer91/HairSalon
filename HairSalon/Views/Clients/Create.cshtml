@model HairSalon.Models.Client

<h2>Create New Client</h2>

<form method="post" action="/Clients/Create">
  <div class="form-group">
    <label for="Name">Name</label>
    <input class="form-control" id="Name" name="Name" type="text" />
  </div>
  <div class="form-group">
    <label for="StylistId">Stylist</label>
    <select class="form-control" id="StylistId" name="StylistId">
      @foreach(var stylist in ViewBag.Stylists)
        {
          <option value="@stylist.StylistId">@stylist.Name</option>
        }
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Add Client</button>
</form>
